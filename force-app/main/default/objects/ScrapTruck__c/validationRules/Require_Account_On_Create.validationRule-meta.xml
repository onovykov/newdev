<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Account_On_Create</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISNEW(),
  ISBLANK(Account__c)
)</errorConditionFormula>
    <errorMessage>Потрібно вибрати Аккаунт (поле «Власник»).</errorMessage>
</ValidationRule>
