<aura:component controller="CreateShopQuotaController" implements="lightning:actionOverride,flexipage:availableForRecordHome,force:hasRecordId,force:hasSObjectName,lightning:isUrlAddressable" access="global" >
	<aura:handler name="init" value="{!this}" action="{!c.doInit}"/>  
    <aura:handler name="createShopQuota" event="c:shopQuotaRegisterEvent" action="{!c.handleComponentEvent}"/>
    <aura:attribute name="quotaType" type="String"/>
    
    
    <lightning:card title="Create Shop Quota" iconName="standard:search" class="">
        <lightning:recordEditForm aura:id="recordEditForm"
                           	      objectApiName="Shop_Quota__c"
                                  onsubmit="{!c.handleSubmit}"
                                  onsuccess="{!c.handleSuccess}"
                                  onerror="{!c.handleError}">
        
            
         <div class="slds-grid">
            <div class="slds-col slds-size_1-of-3 slds-m-left_medium">
                <lightning:inputField fieldName="CDD__c" />
                <lightning:inputField fieldName="Required_Quota_Date__c" />
                <lightning:inputField fieldName="Initial_Quantity_Mt__c" /> 
                                                              
            </div>
            <div class="slds-col slds-size_1-of-3 slds-m-left_medium">
                
                 <c:LookupSearchComponent ></c:LookupSearchComponent>                
                <lightning:inputField fieldName="Opportunity__c" value="{!v.recordId}"/>   
            </div>
        </div>    
        <div class="slds-grid"> 
             <div class="slds-col slds-size_1-of-3 slds-m-left_xx-small">
                 <lightning:button variant="destructive" label="Back To Opportunity" title="Destructive action" onclick="{! c.handleClick}" class="slds-m-top_small slds-m-left_medium"/>
             </div>  
             <div class="slds-col slds-size_1-of-3 slds-m-left_small">
                    
        		 <lightning:button variant="brand" class="slds-m-top_small slds-m-left_medium" type="submit" label="Create new Shop Quota" />
             </div>           
        </div>    
    	</lightning:recordEditForm>           
    </lightning:card>
</aura:component>