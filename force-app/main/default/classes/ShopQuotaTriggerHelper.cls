    public static void calculateActualQuantityByQuoteType(List<Shop_Quota__c> newList, Boolean updateOldQuotas) {
        List<Shop_Quota__c> shopQuotas = new List<Shop_Quota__c>();
        if(updateOldQuotas) {
            shopQuotas = [SELECT Id,
                                 Actual_Quantity__c,
                                 Opportunity__c,
                                 Quota_Type__c,
                                 Required_Quota_Date__c,
                                 CDD__c
                          FROM Shop_Quota__c
                          WHERE id IN :newList
        ];
        } else {
            shopQuotas = newList;
        }
        
        Set<Id> oppIds = new Set<Id>();
        Set<Id> quotaTypesIds = new Set<Id>();
        Map<Id, Map<Id,List<OpportunityLineItem>>> oliByOppAndQuotaType = new Map<Id ,Map<Id,List<OpportunityLineItem>>>();
        Map<Id, Map<String,List<OpportunityLineItem>>> oliByOppAndQuotaTypeCDD = new Map<Id ,Map<String,List<OpportunityLineItem>>>();
        for (Shop_Quota__c shopQuota : shopQuotas) {
            oppIds.add(shopQuota.Opportunity__c);
            quotaTypesIds.add(shopQuota.Quota_Type__c);
        }
        List<OpportunityLineItem> oliList = [
            		SELECT Id,
            		QuotaType__c,
            		OpportunityId,
            		Quantity,
            		CDD__c,
                    FinalCDD__c
            		FROM OpportunityLineItem
            		WHERE QuotaType__c IN :quotaTypesIds
            		AND OpportunityId IN :oppIds
        ];
        system.debug(oliList);
        for (OpportunityLineItem oli : oliList) {
            if(oliByOppAndQuotaTypeCDD.containsKey(oli.OpportunityId)) {
                if(oliByOppAndQuotaTypeCDD.get(oli.OpportunityId).containsKey(String.valueOf(oli.QuotaType__c)+String.valueOf(oli.FinalCDD__c))) {
                    oliByOppAndQuotaTypeCDD.get(oli.OpportunityId).get(String.valueOf(oli.QuotaType__c)+String.valueOf(oli.FinalCDD__c)).add(oli);
                } else {
                    oliByOppAndQuotaTypeCDD.get(oli.OpportunityId).put(String.valueOf(oli.QuotaType__c)+String.valueOf(oli.FinalCDD__c),new List<OpportunityLineItem>{oli});
                }
            } else {
                oliByOppAndQuotaTypeCDD.put(oli.OpportunityId,new Map<String,List<OpportunityLineItem>>());
                oliByOppAndQuotaTypeCDD.get(oli.OpportunityId).put(String.valueOf(oli.QuotaType__c)+String.valueOf(oli.FinalCDD__c),new List<OpportunityLineItem>{oli});
            }
        }
        for (Shop_Quota__c shopQuota : shopQuotas) {
            //if(shopQuota.Actual_Quantity__c == null) {
                shopQuota.Actual_Quantity__c = 0;
            //}
            if(shopQuota.Cdd__c == null && shopQuota.Required_Quota_Date__c != null){
                shopQuota.Cdd__c = shopQuota.Required_Quota_Date__c;
            }
            if(oliByOppAndQuotaTypeCDD.get(shopQuota.Opportunity__c)?.get(String.valueOf(shopQuota.Quota_Type__c)+String.valueOf(shopQuota.Cdd__c))?.size() != null) {
                for(OpportunityLineItem oli : oliByOppAndQuotaTypeCDD.get(shopQuota.Opportunity__c)?.get(String.valueOf(shopQuota.Quota_Type__c)+String.valueOf(shopQuota.Cdd__c))) {
                    shopQuota.Actual_Quantity__c += oli.Quantity;
                }
            }
        }

        update shopQuotas;
        
        if(updateOldQuotas){
            List<Shop_Quota__c> oldQuotas = [SELECT Id,
                                                    Actual_Quantity__c,
                                                    Opportunity__c,
                                                    Quota_Type__c,
                                                    Required_Quota_Date__c,
                                                    CDD__c
                                            FROM Shop_Quota__c
                                            WHERE id NOT IN :shopQuotas
                                            AND Opportunity__c IN: oppIds
            ];
            
            calculateActualQuantityByQuoteType(oldQuotas, false);
        }
    }

