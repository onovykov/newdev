public class QueueUpdateAccountNormName implements Queueable, Database.Stateful {

    private List<Account> accList;

    public QueueUpdateAccountNormName(List<Account> accList) {
        this.accList = accList;
    }

    public void execute(QueueableContext context) {
        Set<Id> accIds = new Set<Id>();
        Map<Id, String> idToName = new Map<Id, String>();
        Map<Id, String> idToOldNorm = new Map<Id, String>();

        for (Account acc : accList) {
            if (String.isNotBlank(acc.Name) && acc.Id != null) {
                accIds.add(acc.Id);
                idToName.put(acc.Id, acc.Name);

                // якщо значення нормалізованої назви доступне — зберігаємо
                if (acc.NormalizedName__c != null) {
                    idToOldNorm.put(acc.Id, acc.NormalizedName__c);
                }
            }
        }

        // Якщо є акаунти без NormalizedName__c — завантажимо з БД
        if (idToOldNorm.size() < accIds.size()) {
            Set<Id> idsToQuery = new Set<Id>(accIds);
            idsToQuery.removeAll(idToOldNorm.keySet());

            for (Account dbAcc : [
                SELECT Id, NormalizedName__c FROM Account WHERE Id IN :idsToQuery
            ]) {
                idToOldNorm.put(dbAcc.Id, dbAcc.NormalizedName__c);
            }
        }

        List<Account> accountsToUpdate = new List<Account>();

        for (Id accId : accIds) {
            String name = idToName.get(accId);
            String newNorm = StringUtilsEx.prepareForComparison(name);
            String oldNorm = idToOldNorm.get(accId);

            if (oldNorm != newNorm) {
                accountsToUpdate.add(new Account(
                    Id = accId,
                    NormalizedName__c = newNorm
                ));
            }
        }

        if (!accountsToUpdate.isEmpty()) {
            update accountsToUpdate;
        }
    }

