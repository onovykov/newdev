    // анти-рекурсія для оновлень із CDL-тригера
    private static Boolean isRunning = false;

    /**
     * Повертає мапу: SupplierLimitEdit__c.Id -> останній ContentDocumentId
     * "Останній" = найпізніше ПРИКРІПЛЕНИЙ (CreatedDate з ContentDocumentLink),
     * а при нічиїх — за CreatedDate документа, далі за ContentDocumentId.
     */
    public static Map<Id, Id> getLatestDocPerParent(Set<Id> parentIds) {
        Map<Id, Id> result = new Map<Id, Id>();
        if (parentIds == null || parentIds.isEmpty()) return result;

        List<ContentDocumentLink> links = [
            SELECT LinkedEntityId,
                   ContentDocumentId,
                   SystemModstamp,                               // подія по лінку (прикріпили/змінили)
                   ContentDocument.CreatedDate,                  // створення документа
                   ContentDocument.LatestPublishedVersion.CreatedDate // остання версія
            FROM ContentDocumentLink
            WHERE LinkedEntityId IN :parentIds
            ORDER BY
                SystemModstamp DESC,                             // найсвіжіша подія по лінку
                ContentDocument.LatestPublishedVersion.CreatedDate DESC,
                ContentDocument.CreatedDate DESC,
                ContentDocumentId DESC
        ];
        for (ContentDocumentLink cdl : links) {
            if (!result.containsKey(cdl.LinkedEntityId)) {
                result.put(cdl.LinkedEntityId, cdl.ContentDocumentId);
            }
        }
        return result;
    }

    /** Викликається з BEFORE-тригера SupplierLimitEdit__c — без DML */
    public static void stampDocLinkOnRecords(List<SupplierLimitEdit__c> records) {
        Set<Id> ids = new Set<Id>();
        for (SupplierLimitEdit__c r : records) if (r.Id != null) ids.add(r.Id);
        if (ids.isEmpty()) return;

        Map<Id, Id> latest = getLatestDocPerParent(ids);
        for (SupplierLimitEdit__c r : records) {
            Id docId = latest.get(r.Id);
            if (docId != null) r.DocLinkId__c = docId;
            // якщо треба чистити поле, коли файлів взагалі нема — раскоментуй:
            // else r.DocLinkId__c = null;
        }
    }

    /** Викликається з CDL-тригера — тут вже робимо DML */
    public static void refreshParentsFromLinks(Set<Id> candidateParentIds) {
        if (candidateParentIds == null || candidateParentIds.isEmpty()) return;

        // залишаємо лише ті, що дійсно є SupplierLimitEdit__c
        Set<Id> parentIds = new Set<Id>();
        for (SupplierLimitEdit__c p : [
            SELECT Id FROM SupplierLimitEdit__c WHERE Id IN :candidateParentIds
        ]) parentIds.add(p.Id);
        if (parentIds.isEmpty()) return;

        if (isRunning) return;
        isRunning = true;
        try {
            Map<Id, Id> latest = getLatestDocPerParent(parentIds);
            List<SupplierLimitEdit__c> toUpdate = new List<SupplierLimitEdit__c>();
            for (Id pid : parentIds) {
                // Якщо файлів уже немає — очистимо поле (щоб не висів старий Id)
                SupplierLimitEdit__c rec = new SupplierLimitEdit__c(
                    Id = pid,
                    DocLinkId__c = latest.containsKey(pid) ? latest.get(pid) : null
                );
                toUpdate.add(rec);
            }
            if (!toUpdate.isEmpty()) update toUpdate;
        } finally {
            isRunning = false;
        }
    }

