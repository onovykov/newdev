    public Id DayId;
    public String DayName;
    public Date DayDate;
    public Id DecadeId;
    public String DecadeName;
    public Integer DecadeNum;
    public Id MonthId;
    public String MonthName;
    public Integer MonthNum;
    public Id YearId;
    public String YearName;
    public Integer YearNum;

    public Calendar() {
        this.DayId = null;
        this.DayName = '';
        this.DayDate = Date.newInstance(1900,1,1);
        this.DecadeId = null;
        this.DecadeName = '';
        this.DecadeNum = 0;
        this.MonthId = null;
        this.MonthName = '';
        this.MonthNum = 0;
        this.YearId = null;
        this.YearName = '';
        this.YearNum = 0;
    }


    public static List<Calendar> getCalendar() {
        List<Calendar> calendarList = new List<Calendar>();
        List<Decade__c> decadeList = [SELECT
                                      Id, Name, Date__c,
                                      Parent__c, Parent__r.Name, Decade__c,
                                      Parent__r.Parent__c, Parent__r.Parent__r.Name, Month__c,
                                      Parent__r.Parent__r.Parent__c, Parent__r.Parent__r.Parent__r.Name
                                    FROM Decade__c WHERE Level__c=4];
        for(Decade__c rec : decadeList) {
            Calendar c = new Calendar();
            c.DayId = rec.Id;
            c.DayName = rec.Name;
            c.DayDate = rec.Date__c;
            c.DecadeId = rec.Parent__c;
            c.DecadeName = rec.Parent__r.Name;
            c.DecadeNum = Integer.valueOf(rec.Decade__c);
            c.MonthId = rec.Parent__r.Parent__c;
            c.MonthName = rec.Parent__r.Parent__r.Name;
            c.MonthNum = Integer.valueOf(rec.Month__c);
            c.YearId = rec.Parent__r.Parent__r.Parent__c;
            c.YearName = rec.Parent__r.Parent__r.Parent__r.Name;
            c.YearNum = Integer.valueOf(rec.Parent__r.Parent__r.Parent__r.Name);
            
            calendarList.add(c);
        }
        return calendarList;
    }

    private static List<Calendar> calendarList;
    private static Map<Id, Calendar> calendarByDayId;
    private static Map<Date, Calendar> calendarByDate;
    private static Map<Id, Calendar> calendarByDecadeId;
    private static Map<String, Calendar> calendarByYMDKey;

    public static void initializeCalendarCache() {
        if (calendarList == null) {
            calendarList = Calendar.getCalendar();
            calendarByDayId = new Map<Id, Calendar>();
            calendarByDate = new Map<Date, Calendar>();
            calendarByDecadeId = new Map<Id, Calendar>();
            calendarByYMDKey = new Map<String, Calendar>();

            for (Calendar c : calendarList) {
                if (c.DayId != null) {
                    calendarByDayId.put(c.DayId, c);
                }
                if (c.DayDate != null) {
                    calendarByDate.put(c.DayDate, c);
                }
                if (c.DecadeId != null) {
                    calendarByDecadeId.put(c.DecadeId, c);
                }
                // Формуємо ключ для (рік-місяць-декада)
                String key = buildYMDKey(c.YearNum, c.MonthNum, c.DecadeNum);
                calendarByYMDKey.put(key, c);
            }
        }
    }

    private static String buildYMDKey(Integer year, Integer month, Integer decade) {
        return String.valueOf(year) + '-' + String.valueOf(month) + '-' + String.valueOf(decade);
    }

    public static List<Calendar> getAll() {
        initializeCalendarCache();
        return calendarList;
    }

    public static Calendar getByDayId(Id dayId) {
        initializeCalendarCache();
        return calendarByDayId.get(dayId);
    }

    public static Calendar getByDate(Date dayDate) {
        initializeCalendarCache();
        return calendarByDate.get(dayDate);
    }

    public static Calendar getByDecadeId(Id decadeId) {
        initializeCalendarCache();
        return calendarByDecadeId.get(decadeId);
    }

    public static Calendar getByYearMonthDecade(Integer yearNum, Integer monthNum, Integer decadeNum) {
        initializeCalendarCache();
        String key = buildYMDKey(yearNum, monthNum, decadeNum);
        return calendarByYMDKey.get(key);
    }

    public static List<Integer> decodeCalendar(Calendar cal) {
        return new List<Integer>{
            cal != null ? cal.YearNum : 0,
            cal != null ? cal.MonthNum : 0,
            cal != null ? cal.DecadeNum : 0
        };
    }


