    @AuraEnabled(cacheable=false)
    public static PassResponse requestPass(String sourceId, Boolean updateRecord) {
        PassResponse out = new PassResponse();
        out.sourceId = String.isBlank(sourceId) ? 'a4OS8000000KZ03MAG' : sourceId;

        try {
            // --- 1) SOAP клієнт + таймаут
            SFToERP.WebServiceSoap ws = new SFToERP.WebServiceSoap();
            ws.timeout_x = 120000;

            // --- 2) BASIC авторизація (Base_*)
            Credentials__c c = Credentials__c.getOrgDefaults();
            if (c == null) throw new AuraHandledException('No Credentials__c org defaults.');
            if (String.isBlank(c.Base_Login__c) || String.isBlank(c.Base_Password__c))
                throw new AuraHandledException('Missing BASIC credentials.');
            ws.inputHttpHeaders_x = new Map<String,String>{
                    'Authorization' => 'Basic ' + EncodingUtil.base64Encode(Blob.valueOf(c.Base_Login__c + ':' + c.Base_Password__c))
            };

            // --- 3) LoginEx (User_*) -> ticket
            String loginRaw = ws.LoginEx(c.User_Login__c, c.User_Password__c);
            Map<String, Object> lo = (Map<String, Object>) JSON.deserializeUntyped(loginRaw);
            Boolean loginOk = lo != null && (lo.get('Success') == true || 'true'.equalsIgnoreCase(String.valueOf(lo.get('Success'))));
            if (!loginOk) {
                out.success = false;
                out.message = 'LoginEx failed';
                out.rawResponse = loginRaw;
                return out;
            }
            String ticket = (String) lo.get('Ticket');

            // --- 4) Хардкод payload
            Map<String,Object> meta = new Map<String,Object>{
                    'MsgType' => 'SF-ERP_ScrapDelivery',
                    'MsgTypeVersion' => 0,
                    'MsgTimestamp' => iso8601WithTz(),
                    'PartNumber' => 1,
                    'TotalParts' => 1
            };
            Map<String,Object> item = new Map<String,Object>{
                    'SourceID'  => out.sourceId,
                    'SourceNDM' => 'SF-000040',
                    'GoodsName' => 'Брухт сталевий тонкий 1/3',
                    'AutoNo'    => 'АЕ1234АА',
                    'TrailerNo' => 'AI1234IA',
                    'DriverFIO' => 'Бурдюк Вадим',
                    'OrgName'   => 'ВАПНЯНА ФАБРИКА ТОВ',
                    'Weight'    => 10.000
            };
            Map<String,Object> data = new Map<String,Object>{ 'Items' => new List<Object>{ item } };
            Map<String,Object> payload = new Map<String,Object>{ 'Metadata' => meta, 'Data' => data };
            String bodyJson = JSON.serialize(payload);
            out.requestBody = bodyJson;

            // --- 5) Виклик ERP
            String execResp = ws.ExecuteEx('_CREATE_PROPUSK_SF', bodyJson, ticket);
            out.rawResponse = execResp;

            // --- 6) Розбір відповіді
            Map<String,Object> resp = (Map<String,Object>) JSON.deserializeUntyped(execResp);
            List<Object> results = (resp == null) ? null : (List<Object>) resp.get('Results');

            if (results != null && !results.isEmpty()) {
                Map<String,Object> r0 = (Map<String,Object>) results[0];
                Boolean ok = (r0 != null) && (r0.get('Success') == true || 'true'.equalsIgnoreCase(String.valueOf(r0.get('Success'))));
                if (ok) {
                    out.passId     = r0.get('PassID')  == null ? null : String.valueOf(r0.get('PassID'));
                    out.passNumber = r0.get('PassNDM') == null ? null : String.valueOf(r0.get('PassNDM'));
                    out.success = true;
                    out.message = 'Pass created';

                    // --- 7) (опц.) оновити слот у SF
                    if (updateRecord == true && out.passId != null) {
                        try {
                            update new ScrapSlotReserve__c(
                                    Id = (Id) out.sourceId,
                                    PassID__c     = out.passId,
                                    PassNumber__c = out.passNumber
                            );
                        } catch (Exception dmlEx) {
                            out.message += ' (record not updated: ' + dmlEx.getMessage() + ')';
                        }
                    }
                } else {
                    out.success = false;
                    out.message = 'ERP error: ' + String.valueOf(r0.get('ErrorCode')) + ' ' + String.valueOf(r0.get('ErrorMessage'));
                }
            } else {
                out.success = (resp != null && (resp.get('Success') == true || 'true'.equalsIgnoreCase(String.valueOf(resp.get('Success')))));
                out.message = 'No item results in response';
            }
            return out;

        } catch (Exception e) {
            out.success = false;
            out.message = e.getMessage();
            return out;
        }
    }

    // ISO-8601 з двокрапкою в офсеті
    @AuraEnabled
    public static String iso8601WithTz() {
        String t = Datetime.now().format('yyyy-MM-dd\'T\'HH:mm:ss.SSSZ');
        if (t != null && t.length() >= 5) {
            String sign = t.substring(t.length()-5, t.length()-4);
            if (sign == '+' || sign == '-') {
                return t.substring(0, t.length()-2) + ':' + t.substring(t.length()-2);
            }
        }
        return t;
    }

